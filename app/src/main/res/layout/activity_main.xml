<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.semmi.myappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="My Nanodegree Apps!"
        android:id="@+id/text"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Popular Movies"
        android:textColor="#FFFFFF"
        android:id="@+id/popularMovie"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_marginTop="20dp"
        android:layout_below="@+id/popularMovie"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Stock Hawk"
        android:textColor="#FFFFFF"
        android:id="@+id/stockHawk"/>


    <android.support.v7.widget.AppCompatButton
        android:layout_marginTop="20dp"
        android:layout_below="@+id/stockHawk"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Build It Bigger"
        android:textColor="#FFFFFF"
        android:id="@+id/buildIt"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_marginTop="20dp"
        android:layout_below="@+id/buildIt"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Make Your App Material"
        android:textColor="#FFFFFF"
        android:id="@+id/material"/>
    <android.support.v7.widget.AppCompatButton
        android:layout_marginTop="20dp"
        android:layout_below="@+id/material"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Go Ubiquitous"
        android:textColor="#FFFFFF"
        android:id="@+id/ubiquitous"/>

    <android.support.v7.widget.AppCompatButton
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ubiquitous"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Capstone"
        android:textColor="#FFFFFF"
        android:id="@+id/capstone"/>
</RelativeLayout>
